{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Listado de alumnos</h1>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th class="col-sm-7">Nombre completo</th>
            <th class="col-sm-2">Grupo</th>
            <th class="col-sm-2">Fecha de nacimiento</th>
            <th class="col-sm-1"></th>
        </tr>
        </thead>
        <tbody>
        {% for alumno in alumnos %}
            <tr>
                <td>{{ alumno.apellidos }}, {{ alumno.nombre }}</td>
                <td>{{ alumno.grupo}}</td>
                <td>{{ alumno.fechaNacimiento|date('d/m/Y') }}</td>
                <td>
                    <a href="{{ path('modificar_alumno', {'id': alumno.id}) }}" class="btn btn-xs btn-info" title="Modificar"><i class="fa fa-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
